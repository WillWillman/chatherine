{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2023",
    "lib": ["ES2024", "DOM"],
		"sourceMap": true,
		"rootDir": ".",
		"outDir": "dist",
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*",
		"chathy"
	],
	"exclude": [
		"**/*.test.ts",
		"**/node_modules/**",
	],
}
