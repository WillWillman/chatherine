{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2023",
		"lib": [
			"esnext"
		],
		"declaration": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*",
		"src/chathy.ts",
		"src/mocks/mocks.ts"
	],
	"exclude": [
		"**/*.test.ts",
		"__mocks__/vscode/vscode.ts",
		"**/node_modules/**",
		"init"
	],
}