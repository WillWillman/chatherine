{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2023",
    "lib": ["ES2024", "DOM"],
		"declaration": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/*.test.ts",
		"__mocks__/**",
		"**/node_modules/**",
		"init"
	],
}
